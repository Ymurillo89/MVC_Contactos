@model ClienteModel
@{
    ViewData["Title"] = "EliminarClientes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
  <div class="card-header">
    Eliminar cliente
  </div>
  <div class="card-body">
  <form asp-action="EliminarClientes" asp-controller="Cliente" method="post">
      <input asp-for="IdCliente" type="hidden" class="form-control" >
            
      
       <div class="alert alert-danger" role="alert">
          ¿Desea eliminar el contacto: @Html.DisplayTextFor(m => m.Nombre)?
        </div>
        <button type="submit" class="btn btn-primary">Eliminar</button>
      <a asp-action="MostarClientes" asp-controller="Cliente" class="btn btn-success ">Regresar</a>
   </form>
  </div>
</div>

